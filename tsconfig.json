{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationMap": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2018",
    "lib": [
      "ES2018",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}