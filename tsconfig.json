{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "ES2018",
      "DOM"
    ],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,    
    "target": "ES2018",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src"],
  "exclude": ["**/dist", "**/node_modules", "**/src/__tests__"]
}